# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript 文件配置
[*.{ts,tsx}]
quote_type = single
max_line_length = 100

# JavaScript 文件配置
[*.{js,jsx}]
quote_type = single
max_line_length = 100

# JSON 文件配置
[*.json]
indent_size = 2

# Markdown 文件配置
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML 文件配置
[*.{yml,yaml}]
indent_size = 2

# 测试文件配置
[*.test.{ts,js}]
indent_size = 2
max_line_length = 120 